extends: '@danny.andrews/eslint-config'
rules:
  # https://stackoverflow.com/a/3390635/2433572
  no-undefined: off
  sort-imports: off
  space-before-function-paren:
    - error
    - anonymous: never
      named: never
      asyncArrow: always
  curly: [error, multi-line]
  lines-around-comment: off
  prefer-promise-reject-errors: off
  no-confusing-arrow: off
env:
  node: true
  browser: false
parser: 'babel-eslint'
parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    jsx: true
    pipelineOperator: true

