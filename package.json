{
  "name": "circleci-weigh-in",
  "version": "0.2.5",
  "description": "A CircleCI integration script for tracking file size changes across deploys.",
  "keywords": [
    "assets",
    "circleci",
    "github",
    "gulp",
    "rollup",
    "size"
  ],
  "license": "MIT",
  "author": "Danny Andrews",
  "files": [
    "lib/",
    "circleci-weigh-in"
  ],
  "main": "index.js",
  "bin": {
    "circleci-weigh-in": "./circleci-weigh-in"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danny-andrews/circleci-weigh-in.git"
  },
  "scripts": {
    "build": "rm -rf lib && babel src --out-dir lib",
    "ci": "yarn lint && yarn test:coverage && yarn stats",
    "lint": "eslint . && sort-package-json",
    "stats": "echo 'LOC IN PROJECT...' && find src -name '*.js' -not -path '**/__tests__/*' | xargs wc -l",
    "test": "BABEL_ENV=test ava",
    "test:coverage": "nyc yarn test"
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "command-line-args": "^4.0.6",
    "filesize": "^3.5.10",
    "flat-file-db": "^1.0.0",
    "humps": "^2.0.1",
    "mkdirp": "^0.5.1",
    "monet": "^0.8.10",
    "node-fetch": "^1.7.1",
    "ramda": "^0.24.1",
    "sprintf-js": "^1.1.1"
  },
  "devDependencies": {
    "@danny.andrews/eslint-config": "^5.0.0",
    "ava": "^0.22.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-pipeline-operator": "v7.0.0-beta.3",
    "babel-preset-env": "^1.5.2",
    "babel-register": "7.0.0-beta.3",
    "babylon": "^7.0.0-beta.34",
    "eslint": "^4.1.1",
    "expect": "^1.20.2",
    "nyc": "^11.1.0",
    "sort-package-json": "^1.6.0"
  },
  "ava": {
    "files": [
      "src/**/__tests__/**/*.js",
      "!**/shared/**"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "failWithoutAssertions": false
  },
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "src/test",
      "src/**/__tests__/**/*.js",
      "src/core/errors.js"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "check-coverage": true,
    "per-file": false,
    "lines": 95,
    "statements": 95,
    "branches": 95
  }
}
